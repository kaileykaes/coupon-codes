<%= render partial: "shared/nav" %>

<div class="row">
  <div class="col-sm-6 column-header">
    <p class='mr-auto'>All My Coupons</p>
  </div>
</div>

<div class="mr-auto col-sm-6">
  <ul>
  <section id="coupons">

    <div id="active">
      <h4>Active Coupons</h4>
      <% @merchant.active_coupons.each do |coupon| %>
        <div id="coupon-<%= coupon.id %>">
          <li><%= link_to coupon.name, merchant_coupon_path(@merchant, coupon) %> <%= coupon.discount %>
        </div>
      <% end %>
    </div>

    <div id="inactive">
      <h4>Inactive Coupons</h4>
      <% @merchant.inactive_coupons.each do |coupon| %>
        <div id="coupon-<%= coupon.id %>">
          <li><%= link_to coupon.name, merchant_coupon_path(@merchant, coupon) %> <%= coupon.discount %>
        </div>
      <% end %>
    </div>
    
  </section>
  </ul>
</div>

<p><%= link_to 'Create a New Coupon', new_merchant_coupon_path(@merchant) %></p>