<%= render partial: "shared/nav" %>
<h1><%= @coupon.name %></h1>
<p>Unique Code: <%= @coupon.unique_code %></p>
<p>Discount: <%= @coupon.discount %></p>
<p>Status: <%= @coupon.status %></p>
<p>Times Used: <%= @coupon.times_used %></p>
<p><%= form_with url: merchant_coupon_path(@coupon, @merchant), method: :patch, local: true do |f| %> 
<%= f.hidden_field :name, value: @coupon.name %>
<%= f.hidden_field :discount, value: @coupon.discount %>
<%= f.hidden_field :status, value: 0 %>
<%= f.hidden_field :discount, value: @coupon.discount %>
<%= f.hidden_field :discount_type, value: @coupon.discount_type %>
<%= f.submit 'Deactivate' %>
<% end %></p>